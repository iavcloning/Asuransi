<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnaildetail"
            android:layout_width="match_parent"
            android:src="@drawable/aspin"
            android:layout_height="180dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/titledetail"
            android:layout_above="@+id/detailnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Judul Artikel"
            android:paddingLeft="8dp"
            android:background="#d4000000"
            tools:ignore="NotSibling" />

        <TextView
            android:layout_below="@+id/thumbnaildetail"
            android:id="@+id/detailnews"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Isi Artikel "/>
    </RelativeLayout>



</LinearLayout>
